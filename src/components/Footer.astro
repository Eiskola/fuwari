---

import { profileConfig } from "../config";
import { url } from "../utils/url-utils";

const currentYear = new Date().getFullYear();
---

<!--<div class="border-t border-[var(&#45;&#45;primary)] mx-16 border-dashed py-8 max-w-[var(&#45;&#45;page-width)] flex flex-col items-center justify-center px-6">-->
<div class="transition border-t border-black/10 dark:border-white/15 my-10 border-dashed mx-32"></div>
<!--<div class="transition bg-[oklch(92%_0.01_var(&#45;&#45;hue))] dark:bg-black rounded-2xl py-8 mt-4 mb-8 flex flex-col items-center justify-center px-6">-->

<div class="transition border-dashed border-[oklch(85%_0.01_var(--hue))] dark:border-white/15 rounded-2xl mb-12 flex flex-col items-center justify-center px-6 bg-white/80 dark:bg-black/60 shadow-lg">
    <div class="transition text-center text-base md:text-lg font-semibold text-black dark:text-white drop-shadow-sm">
        &copy; <span id="copyright-year">{currentYear}</span> <span class="text-[var(--primary)]">{profileConfig.name}</span>. All Rights Reserved.
        <div class="statistics mt-2" style="font-size: 0.95rem; color: #333;">
            <div href="https://developer.hitokoto.cn/" id="hitokoto_text"><span id="hitokoto"></span></div>
            <script src="https://v1.hitokoto.cn/?c=f&c=h&c=i&c=k&c=l&encode=js&select=%23hitokoto" defer></script>
        </div>
        <div class="mt-1" style="font-size: 1rem; color: #444;">
            <span id="timeDate">loading days...</span>
            <span id="times">loading time...</span>
            <!-- Load duration.js deferred so it doesn't block rendering -->
            <script src="/js/duration.js" defer></script>
        </div>
    </div>
</div>